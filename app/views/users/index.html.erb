<%= render partial: 'list', locals:{ user: @user, book: Book.new } %>

  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
     <thead>
      <tr>
       <th>Image</th>
       <th>name</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <tr>

         <% @users.each do |user| %>
         <td>
           <% if user.profile_image.attached? %>
            <%= image_tag user.profile_image, size: "50x50" %>
           <% else %>
            <%= image_tag 'no_image', size: "50x50" %>
           <% end %>

         </td>
        <td><%= user.name %></td>
        <td>フォロー数：<%= user.followings.count %></td>
        <td>フォロワー数：<%= user.followers.count %></td>
        <td><%= render 'relationships/btn', user: user %></td>

        <td><%= link_to user_path(user.id) do %>
            <p>Show</p>
            <% end %>
        </td>
      </tr>
         <% end %>

      </tbody>
    </table>
   </div>


  </div>
 </div>

