<h1>User info</h1>

<%= form_with model: @user, url: user_registration_path, method: :patch, local:true do |f| %>

<h4>Name</h4>
  <%= f.text_field :name %>
  <%= f.submit 'upload' %>
  

<h4>Image</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <%= f.submit 'upload' %>
  


<h4>Introduction</h4>
  <%= f.text_area :introduction %>
  <%= f.submit 'Update User' %>
  

<% end %>