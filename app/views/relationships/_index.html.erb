
<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <% if users.exists? %>

        <% users.each do |user| %>
        <table class='table'>
          <thead>
            <tr>
              <td>Image</td>
              <td>Name</td>
              <td></td>

            </tr>
          </thead>
          <tbody>
              <td>
               <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "50x50" %>
                 <% else %>
                  <%= image_tag 'no_image', size: "50x50" %>
                 <% end %>
              </td>
              <td><%= user.name %></td>
              <td>フォロー数：<%= user.followings.count %></td>
              <td>フォロワー数：<%= user.followers.count %></td>
              <td><%= link_to user_path(user.id) do %>
                  <p>Show</p>
                  <% end %>
              </td>


           </tbody>
         </table>
         <% end %>
        <% else %>
          <P>ユーザーはいません。</P>
        <% end %>
      </div>
    </div>
  </div>
