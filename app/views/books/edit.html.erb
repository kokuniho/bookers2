<h2>Editing Book</h2>

  <%= form_with model: @book, url: book_path(@book.id), method: :patch, local:true do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit "Update Book", class: 'btn btn-success btn-sm' %>
  <% end %>

  <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>

