<%= render partial: 'users/list', locals: { user: @user, book: Book.new } %>


  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <tr>
        <td>
        <%= link_to user_path(@user) do %>
         <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, size: "50x50" %>
           <% else %>
            <%= image_tag 'no_image', size: "50x50" %>
           <% end %><br>
           <%= link_to user_path(@user) do%>
           <% @user.name %>
         <% end %>
        <% end %>
       </td>
       <td><%= @book.title %></td>
       <td><%= @book.body %></td>
       <td><% if @book.user == current_user %>
             <%= link_to edit_book_path(@book.id), class: 'btn btn-sm btn-success' do %>
              Edit<% end %>
           <!--% else %>-->
             <!--%= link_to books_path, class: 'btn btn-sm btn-success' %>-->
           <% end %>
       </td>
       <td> <% if @book.user == current_user %>
             <%= link_to book_path(@book), method: :delete, class: 'btn btn-sm btn-danger' do%>
             Destroy
             <% end %>
            <% end %>
       </td>
      </tr>
      </tbody>
    </table>
   </div>

 </div>
</div>




