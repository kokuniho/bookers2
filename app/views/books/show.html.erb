<%= render partial: 'users/list', locals: { user: @user, book: @book } %>


  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <tr>
        <td><% if @user.image.attached? %>
            <%= image_tag @user.image, size: "50x50" %>
           <% else %>
            <%= image_tag 'no_image', size: "50x50" %>
           <% end %><br>
           <%= @user.name %>
       </td>
       <td><%= @book.title %></td>
       <td><%= @book.body %></td>
       <td><% if @book.user == current_user %>
           <li><%= link_to edit_book_path(@book.id), class: 'btn btn-sm btn-success' do %>
             Edit</li>
            <% end %>
           <% end %>
       </td>
       <td> <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book), method: :delete %>
            <!--btn btn-sm btn-danger-->
            <% end %>
       </td>
      </tr>
      </tbody>
    </table>
   </div>

 </div>
</div>




