
     <p id="notice"></p>
     <div class="container px-5 px-sm-0">
      <div class="row">
       <div class="col-md-3">
         <h2>User info</h2>
           <% if @user.image.attached? %>
            <%= image_tag @user.image, size: "100x100" %>
           <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
           <% end %>
      <table class="table">
       <tbody>
        <tr></tr>
          <tr>
           <th>Name</th>
           <th><%=@user.name %></th>
          </tr>
          <tr>
           <th>Introduction</th>
           <th><%=@user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
       <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>
       <% end %>
      </div>

      <h2 class ="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
         <h4>Title</h4>
          <%= f.text_field :title %>
         <h4>Opinion</h4>
         <%= f.text_area :body %>
        <%= f.submit "created book" %>
       <% end %>
      </form>
     </div>
    </div>
   </div>

    <h1>Books</h1>
    <% @books.each do |book| %>
    <p>Title</p>
      <span><%= book.title %></span>
    <p>Opinion</p>
      <span><%= book.body %></span>
　　<% end %>

